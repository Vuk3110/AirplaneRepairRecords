@model SlojPodataka.clsServis

@{
    ViewData["Title"] = "Dodajte servis";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
    <h4 class="text-center mb-4">Dodaj servis</h4>
    <form asp-action="AdminDodajeServis" method="post">

        <div class="row justify-content-center">
            <div class="form-group col-sm-6 col-md-4 flex-column d-flex">
                <label asp-for="IdAviona">ID Aviona<span class="text-danger"> *</span></label>
                <input asp-for="IdAviona" class="form-control" />
                <span asp-validation-for="IdAviona" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-group col-sm-6 col-md-4 flex-column d-flex">
                <label asp-for="OpisKvara">Opis Kvara<span class="text-danger"> *</span></label>
                <textarea asp-for="OpisKvara" class="form-control" maxlength="500" oninput="updateCharCount(this)"></textarea>
                <span asp-validation-for="OpisKvara" class="text-danger"></span>
                <small id="charCount">500 karaktera preostalo</small>
            </div>
        </div>

                <button type="submit" class="btn btn-success">Dodaj avion</button>

    </form>
</div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function updateCharCount(textarea) {
            var maxLength = 500;
            var currentLength = textarea.value.length;
            var remaining = maxLength - currentLength;
            document.getElementById('charCount').innerText = remaining + " karaktera preostalo";
        }
    </script>
}
