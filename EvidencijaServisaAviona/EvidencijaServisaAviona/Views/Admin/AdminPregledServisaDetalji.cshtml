@using System.Data;
@model System.Data.DataSet

@{
    ViewData["Title"] = "Detalji";
    var services = Model?.Tables[0]?.Rows.Cast<DataRow>();
}

<style>
    .sticky-note {
        background-color: #ffeb3b;
        padding: 20px;
        margin: 10px;
        width: max-content;
        height: max-content;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        position: relative;
        overflow: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-content: flex-start;
        flex-direction: column; /* omogući vertikalni scrollbar ako je sadržaj prevelik */
    }

        .sticky-note h5 {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .sticky-note p {
            font-size: 1em;
            line-height: 1.2em;
            margin: 5px 0;
            word-wrap: break-word; /* prelom teksta po potrebi */
        }

        .sticky-note .details-btn {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
        }
</style>

<h1>Detalji:</h1>

<div class="d-flex flex-wrap justify-content-center">
    @if (services != null && services.Any())
    {
        @foreach (var row in services)
        {
            <div class="sticky-note">
                <h5>ID Servisa: @row["IDServisa"]</h5>
                <p><strong>Proizvođač:</strong> @row["Naziv"]</p>
                <p><strong>Model:</strong> @row["Model"]</p>
                <p><strong>Opis kvara:</strong> @row["OpisKvara"]</p>
                <p><strong>Status Tiketa:</strong> @row["Opis"]</p>
            </div>
        }
    }
    else
    {
        <p>Nema servisa.</p>
    }
</div>

