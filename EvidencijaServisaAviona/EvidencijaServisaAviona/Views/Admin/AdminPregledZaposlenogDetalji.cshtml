@model SlojPodataka.clsZaposleni

@{
    ViewData["Title"] = "Izmenite zaposlenog";
}

<head>
</head>
<body>


<div class="container mt-5">
<div class="card">
            <div class="card-body">
    <h4 class="text-center mb-4">Izmeni podatke</h4>
    <form asp-action="IzmeniPodatke" method="post">

        <input type="hidden" name="StariJMBG" value="@Model.Jmbg" />

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Ime">Ime<span class="text-danger"> *</span></label>
                <input asp-for="Ime" class="form-control">
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Prezime">Prezime<span class="text-danger"> *</span></label>
                <input asp-for="Prezime" class="form-control">
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Email">E-mail adresa<span class="text-danger"> *</span></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Lozinka">Lozinka<span class="text-danger"> *</span></label>
                <input asp-for="Lozinka" class="form-control">
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Ovlascenje">Ovlašćenje<span class="text-danger"> *</span></label>
                <input asp-for="Ovlascenje" class="form-control">
                <span asp-validation-for="Ovlascenje" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 flex-column d-flex">
                <label asp-for="Jmbg">ЈМБГ<span class="text-danger"> *</span></label>
                <input asp-for="Jmbg" class="form-control">
                <span asp-validation-for="Jmbg" class="text-danger"></span>
            </div>
        </div>

        <div class="btn-group btn-group-sm mt-3" role="group">
            <button type="submit" class="btn btn-sm btn-success" name="action" value="izmeni">Izmeni podatke</button>
        </div>

        </form>
    </div>
</div>
    </div>
</body>
